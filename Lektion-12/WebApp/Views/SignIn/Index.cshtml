@model SignInModel

@{
    Layout = "~/Views/Shared/_AuthenicationLayout.cshtml";
    ViewData["Title"] = "Sign In";
}

<div class="col-3">
    <div class="text-center mb-3 authentication">
        <h1><a asp-controller="Home" asp-action="Index">Fixxo.</a></h1>
    </div>

    <div class="card shadow">
        <div class="card-body p-5">
            <form asp-action="Index" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="form-text text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Password" class="form-label">Password</label>
                    <input asp-for ="@Model.Password" class="form-control" />
                    <span asp-validation-for="@Model.Password" class="form-text text-danger"></span>
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-theme">SIGN IN</button>
                    <p class="mt-3 text-center">Don't have an account yet? <a asp-controller="SignUp" asp-action="Index">Sign up</a>.</p>
                </div>
            </form>
        </div>
    </div>
</div>
